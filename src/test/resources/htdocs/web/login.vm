function saveUsername() {
  if (jQuery("#remember_me").is(":checked")) {
    var date = new Date();
    date.setTime(date.getTime() + 24 * 30 * 60 * 60 * 1000); // sets it for approx 30 days.
    jQuery.cookie("username", jQuery("#username").val(), { path: '/', expires: date });
  }
}

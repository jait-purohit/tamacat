#parse("htdocs/common/html-start.vm")
<body>
  <div id="contents">
    <div id="header">LOGIN</div>
    <div id="main" style="border:0px">
      <h1>LOGIN</h1>
      <form action="${contextRoot}/check.html" method="post" onclick="saveUsername();">
       <table>
         <tr>
           <th>UserName</th>
           <td><input type="text" id="username" name="username" size="30" /></td>
         </tr>
         <tr>
           <th>Password</th>
           <td><input type="password" name="password" size="30" /></td>
         </tr>
         <tr>
           <td align="right" valign="top">
             <input type="checkbox" id="remember_me" name="remember_me" value="true" />
           </td>
           <td>
             <label for="remember_me">Remember me on this computer</label>
           </td>
         </tr>
         <tr>
           <td colspan="2"><input type="submit" id="login" value="Login" />
           </td>
         </tr>
       </table>
      </form>
   </div>
    <div id="menu"></div>
  </div>
</body>
<script type="text/javascript">
